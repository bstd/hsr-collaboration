div(ng-click='showChildren = !showChildren', ng-class="{ 'state-open': showChildren, 'state-closed': !showChildren }")
  md-toolbar(ng-class='order.state')
    div(class='md-toolbar-tools')
      md-chips
        md-chip
          | {{order.dateCreated | date: 'dd.MM.yyyy HH:mm'}}
        md-chip
          | {{order.addressLastName}}
        md-chip
          | {{order.total | number:2}}
      span(flex)
      md-button(class='md-icon-button', aria-label='Auf-/zuklappen')
        md-icon(md-svg-icon='expand_more', class='icon-open brew__icon')
        md-icon(md-svg-icon='expand_less', class='icon-close brew__icon')

  div(ng-show='showChildren')
    include partial-order-detail-edit.jade
