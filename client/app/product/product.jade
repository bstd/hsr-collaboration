include ../partials/header.jade

section
  h1
    | Produkte
section(layout='row', flex)
  md-content(layout='row', layout-wrap, class='md-padding')
    md-card(ng-repeat='product in products track by product._id', flex='25', flex-md='33', flex-sm='100')
      md-card-content
        p
          | {{product.name}} (EAN: {{product.ean}})
        p
          | {{product.price | number: 2}}
        p
          | {{product.info}}
        div(layout='row', layout-align='end center', class='md-actions')
          md-button(ng-click='addToBasket(product)', class='md-button md-raised md-primary')
            | Kaufen
